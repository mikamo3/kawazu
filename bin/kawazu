#!/usr/bin/env bash
main() {
  local cmd
  local exit_status=0
  local -a params=()
  local valid_commands="add|clone|init|link|unlink"

  export KAWAZU_ROOT_DIR=${KAWAZU_ROOT_DIR:-$HOME/.kawazu/repos}
  export KAWAZU_DOTFILES_DIR=${KAWAZU_DOTFILES_DIR:-$HOME/.kawazu/dotfiles}
  export KAWAZU_BACKUP_DIR=${KAWAZU_BACKUP_DIR:-$HOME/.kawazu/backup}
  export KAWAZU_VERSION=0.1

  # shellcheck disable=SC1090
  source "${KAWAZU_ROOT_DIR}/lib/console.sh"
  # shellcheck disable=SC1090
  source "${KAWAZU_ROOT_DIR}/lib/file.sh"
  # shellcheck disable=SC1090
  source "${KAWAZU_ROOT_DIR}/lib/git.sh"
  # shellcheck disable=SC1090
  source "${KAWAZU_ROOT_DIR}/lib/interactive.sh"

  OPT_DEBUG=false
  OPT_FORCE=false
  OPT_SKIP=false

  if ! type git &>/dev/null; then
    print_error "Git is not installed."
    return 1
  fi

  #set options
  while [[ "$1" =~ ^- ]]; do
    options=()
    if [[ "$1" =~ ^-[a-z] ]]; then
      opt_flgs=${1#-}
      for ((i = 0; i < ${#opt_flgs}; i++)); do
        options+=("${opt_flgs:$i:1}")
      done
      unset opt_flgs
    else
      options=("${1#--}")
    fi
    for option in "${options[@]}"; do
      case $option in
      d | debug)
        # shellcheck disable=SC2034
        OPT_DEBUG=true
        continue
        ;;
      f | force)
        # shellcheck disable=SC2034
        OPT_FORCE=true
        continue
        ;;
      s | skip)
        # shellcheck disable=SC2034
        OPT_SKIP=true
        continue
        ;;
      v | version)
        print_version
        return 0
        ;;
      *)
        print_error "invalid option : $1"
        return 1
        ;;
      esac
    done
    unset options
    shift
  done

  # run command
  if [[ $# == 0 ]]; then
    cmd="help"
    exit_status=1
  else
    if ! [[ $1 =~ ^$valid_commands$ ]]; then
      print_error "invalid command : $1"
      return 1
    fi
    cmd=$1
    shift
  fi

  #check number of parameter
  case $cmd in
  help)
    if [[ $# -gt 0 ]]; then
      params=("$1")
    fi
    ;;
  add)
    if [[ $# == 0 ]]; then
      cmd="help"
      params=("add")
      exit_status=1
    else
      params=("$@")
    fi
    ;;
  clone)
    if [[ $# == 0 || $# -gt 2 ]]; then
      cmd="help"
      params=("clone")
      exit_status=1
    else
      params=("$@")
    fi
    ;;
  init)
    if [[ $# -gt 1 ]]; then
      cmd="help"
      params=("init")
      exit_status=1
    else
      params=("$@")
    fi
    ;;
  link)
    if [[ $# == 0 ]]; then
      cmd="help"
      params=("link")
      exit_status=1
    else
      params=("$@")
    fi
    ;;
  unlink)
    if [[ $# == 0 ]]; then
      cmd="help"
      params=("unlink")
      exit_status=1
    else
      params=("$@")
    fi
    ;;
  esac

  # shellcheck disable=SC1090
  source "$KAWAZU_ROOT_DIR/lib/command_$cmd.sh"
  case "$cmd" in
  add | link | unlink)
    for param in "${params[@]}"; do
      command_$cmd "$param"
      result_code=$?
      [[ $result_code != 0 ]] && exit_status=$result_code
      unset result_code
    done
    ;;
  *)
    command_$cmd "${params[@]}"
    result_code=$?
    [[ $result_code != 0 ]] && exit_status=$result_code
    unset result_code
    ;;
  esac

  return $exit_status
}

main "$@"
